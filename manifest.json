{
  "manifest_version": 3,
  "name": "Equo",
  "description": "Discover your clothing's climate footprint",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/logo.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/smart-fashion-badge.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
